{
    "manifest_version": 3,
    "name": "RePages",
    "icons": {
      "32": "icons/Plug_ico_reload32.png", 
      "48": "icons/Plug_ico_reload48.png"
    },
    "version": "0.1",
    "description": "Auto reload all opened pages",
    "author": "mkultra",
    "homepage_url": "https://github.com/FFl0wer1",
    "permissions": [
        "tabs"
      ],
    "action": {
      "default_popup": "popup/popup.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"]
    }]
}  
